Package: fabricatr
Type: Package
Title: Imagine Your Data Before You Collect It 
Version: 0.5.0
Authors@R: c(person("Graeme", "Blair", email = "graeme.blair@ucla.edu", role = c("aut", "cre")),
             person("Jasper", "Cooper", email = "jjc2247@columbia.edu", role = c("aut")),
